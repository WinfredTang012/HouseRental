<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Booking"
    android:background="@drawable/background2">


    <TextView
        android:id="@+id/booktitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Residential Rental Booking Form"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="Please provide the correct information to book the property*"
        android:textColor="@color/black"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/etFullName"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColorHint="#757575"/>

    <EditText
        android:id="@+id/etApplicantPhone"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Applicant's Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etMatricId"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Matric ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etApplicantEmail"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Applicant Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etApplicantBorn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Birth Date [DD-MM-YYYY]"
        android:inputType="date"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Please capture an image of your valid ID:"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_image_24" />

    <Button
        android:id="@+id/bt_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Scan the ID Card" />

    <EditText
        android:id="@+id/etMoveIn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Move In Date[DD-MM-YYYY]"
        android:inputType="date"/>

    <Button
        android:id="@+id/btn_BookProperty"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Book"
        android:textColor="@color/black"
        android:textSize="16sp" />








</LinearLayout>